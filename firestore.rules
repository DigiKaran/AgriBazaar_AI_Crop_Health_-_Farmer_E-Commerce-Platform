rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Default rule for a development/project environment ---
    // This allows any authenticated (logged-in) user to perform read and write operations.
    // This is NOT secure for a production app but is perfect for a college project
    // where functionality is prioritized over granular security.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
