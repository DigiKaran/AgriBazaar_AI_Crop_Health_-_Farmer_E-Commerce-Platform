
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // This is a simplified ruleset for a college project as requested.
    // It allows any authenticated user to read and write to the entire database.
    // This is NOT secure for a production application.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
